<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:text="Nome do local:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/txtNomeLocal"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtNomeLocal"
        android:inputType="textCapSentences"
        android:layout_below="@+id/txtNomeLocal"
        android:layout_alignLeft="@+id/txtNomeLocal"
        android:layout_toLeftOf="@+id/btDesfazer" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_undo"
        android:id="@+id/btDesfazer"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/edtNomeLocal"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        android:clickable="false"
        android:onClick="desfazerColeta"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Localização -"
        android:id="@+id/txtPosicionamento"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/edtNomeLocal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtPosicionamento"
        android:background="@drawable/border"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/linearPosicao"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Latitude: "
                android:textStyle="bold"
                android:id="@+id/txtLabelLatitude"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Longitude: "
                android:textStyle="bold"
                android:id="@+id/txtLabelLongitude"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Precisão: "
                android:textStyle="bold"
                android:id="@+id/txtLabelPrecisao"
                android:layout_marginTop="10dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-0.00000000"
                android:id="@+id/txtLatitude"
                android:layout_marginLeft="5dp"
                />
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-0.00000000"
                android:id="@+id/txtLongitude"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00000000"
                android:id="@+id/txtPrecisao"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="MARCAR"
        android:id="@+id/btMarcar"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/linearPosicao"
        android:layout_centerHorizontal="true"
        android:onClick="marcarLocal"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        android:background="@drawable/botao_marcar"
        />


</RelativeLayout>
</ScrollView>